#: import NoTransition kivy.uix.screenmanager.NoTransition
<LibraryPage>:
    name: 'library_page'
    novellist: novellist

    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 0, 0, 0, 0

        NovelList:
            id: novellist

<NovelList>:
    viewclass: 'NovelItem'
    novellist: novel_recycle_list

    SelectableRecycleBoxLayout:
        id: novel_recycle_list
        cols: 5
        padding: 12, 10, 12, 82
        spacing: 29, 4
        default_size: dp(140), dp(127)
        default_size_hint: None, None
        size_hint_y: None
        height: self.minimum_height

<NovelItem>:
    rows: 2
    spacing: 2

    Image:
        size_hint_y: None
        height: 120 * 0.7
        center: self.parent.center
        source: root.thumbnail
        allow_stretch: True
        keep_ratio: False

    Label:
        text: root.title[:20]
        size_hint_y: None
        height: 120 * .3