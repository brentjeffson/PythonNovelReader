#: import ButtonColor novelreader.helpers.ButtonColor
<SearchPage>:
    name: 'search_page'
    search_list_recycle: search_list
    search_input: search_input

    BoxLayout:
        orientation: 'vertical'
        spacing: 8

        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, .1

            TextInput:
                id: search_input
                font_size: '32sp'
                multiline: False
                hint_text: 'Title Of Novel'
                on_text_validate: root.start_search()

            Button:
                text: 'Search'
                background_color: ButtonColor.PRIMARY_DEFAULT.value
                on_press: root.start_search()
                size_hint: .1, 1

        RecycleView:
            id: search_list
            viewclass: 'SearchItem'

            RecycleBoxLayout:
                orientation: 'vertical'
                spacing: 2
                default_size: None, dp(56)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height

<SearchItem>:
    background_color: ButtonColor.SECONDARY_DEFAULT.value
    on_press: root.browse()
