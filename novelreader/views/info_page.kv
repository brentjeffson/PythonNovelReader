<InfoPage>:
    name: 'info_page'

    GridLayout:
        rows: 3
        
        GridLayout:
            rows: 1
            cols: 2

            Label: 
                Image:
                    center: self.parent.center
                    source: root.novel_thumbnail_url
                    allow_stretch: True
                    keep_ratio: False
            
            GridLayout:
                rows: 6

                Label:
                    bold: True
                    text: root.novel.title
                    font_size: 18
                
                InfoItem:
                    name: 'Authors'
                    value: ','.join(root.novel.authors)
                
                InfoItem:
                    name: 'Genres'
                    value: ','.join(root.novel.genres)
                
                InfoItem:
                    name: 'Release'
                    value: root.novel.release
                
                InfoItem:
                    name: 'Status'
                    value: root.novel.status
                
                InfoItem:
                    name: 'Rating'
                    value: root.novel.rating

        RecycleLayout:
            id: chapter_list
            viewclass: 'ChapterItem'

        BottomControlBar:

<InfoItem@GridLayout>
    cols: 2
    row_force_default: True
    row_default_height: 40

    Label: 
        text: root.name
    Label:
        text: root.value

