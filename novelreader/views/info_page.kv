<InfoPage>:
    name: 'info_page'
    title: title
    authors: authors
    genres: genres
    release_date: release_date
    status: status
    rating: rating
    chapter_list: chapter_list

    BoxLayout:
        orientation: 'vertical'
        spacing: 8

        GridLayout:
            rows: 2
            cols: 2
            size_hint_y: 0.25

            Label:
                Image:
                    id: thumbnail
                    center: self.parent.center
                    allow_stretch: True
                    keep_ratio: False

            GridLayout:
                rows: 6

                Label:
                    id: title
                    bold: True
                    font_size: 18

                InfoItem:
                    id: authors
                    name: 'Authors'

                InfoItem:
                    id: genres
                    name: 'Genres'

                InfoItem:
                    id: release_date
                    name: 'Release'

                InfoItem:
                    id: status
                    name: 'Status'

                InfoItem:
                    id: rating
                    name: 'Rating'
            
            Button:
                text: 'Add to library'
                on_press: root.add_to_library()

        RecycleView:
            id: chapter_list
            size_hint_y: 0.5
            viewclass: 'ChapterItem'
            data: [{"text": 'Chapter 1'}]

            RecycleBoxLayout:
                orientation: 'vertical'
                spacing: 2
                default_size: None, dp(56)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height

        BottomControlBar:

<ChapterItem>
    on_press: root.read()

<InfoItem>
    cols: 2

    Label:
        text: root.name

    Label:
        text: root.value
