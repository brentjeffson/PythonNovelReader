<InfoPage>:
    name: 'info_page'

    BoxLayout:
        orientation: 'vertical'
        spacing: 8

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.15

            BoxLayout:
                orientation: 'vertical'
                size_hint_x: 0.4

                Label:
                    size_hint_y: 0.8
                    Image:
                        id: thumbnail
                        center: self.parent.center
                        allow_stretch: True
                        keep_ratio: False
                Button:
                    id: add_novel_btn
                    text: 'Add to library'
                    size_hint_y: 0.2
                    on_press: root.add_to_library()

            BoxLayout:
                orientation: 'vertical'
                size_hint_x: 0.6

                Label:
                    id: title
                    bold: True
                    font_size: 18

                InfoItem:
                    id: authors
                    name: 'Authors'

                InfoItem:
                    id: genres
                    name: 'Genres'

                InfoItem:
                    id: release_date
                    name: 'Release'

                InfoItem:
                    id: status
                    name: 'Status'

                InfoItem:
                    id: rating
                    name: 'Rating'

        RecycleView:
            id: chapter_list
            size_hint_y: 0.5
            viewclass: 'ChapterItem'
            data: [{"text": 'Chapter 1'}]

            RecycleBoxLayout:
                orientation: 'vertical'
                spacing: 2
                default_size: None, dp(56)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height

<ChapterItem>
    on_press: root.read()

<InfoItem>
    orientation: 'horizontal'

    Label:
        text: root.name
        size_hint_x: 0.2

    Label:
        text: root.value
        size_hint_x: 0.8
