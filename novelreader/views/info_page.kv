<InfoPage>:
    name: 'info_page'
    chapter_list: chapter_list

    GridLayout:
        rows: 3
        
        GridLayout:
            rows: 1
            cols: 2
            size_hint_y: 0.25

            Label: 
                Image:
                    center: self.parent.center
                    source: root.novel['thumbnail']
                    allow_stretch: True
                    keep_ratio: False
            
            GridLayout:
                rows: 6

                Label:
                    bold: True
                    text: root.novel['title']
                    font_size: 18
                
                InfoItem:
                    name: 'Authors'
                    # value: ','.join(root.novel.authors)
                
                InfoItem:
                    name: 'Genres'
                    # value: ','.join(root.novel.genres)
                
                InfoItem:
                    name: 'Release'
                    # value: root.novel.release
                
                InfoItem:
                    name: 'Status'
                    # value: root.novel.status
                
                InfoItem:
                    name: 'Rating'
                    # value: root.novel.rating

        RecycleLayout:
            id: chapter_list
            viewclass: 'ChapterItem'

        BottomControlBar:

<InfoItem>
    cols: 2
    row_force_default: True
    row_default_height: 40

    Label: 
        text: root.name
        
    Label:
        text: root.value

